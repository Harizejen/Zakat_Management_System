<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>com.user.controller.UserLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserSignUpServlet</servlet-name>
        <servlet-class>com.user.controller.UserSignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddApplicationServlet</servlet-name>
        <servlet-class>com.application.controller.AddApplicationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StaffLoginServlet</servlet-name>
        <servlet-class>com.staff.controller.StaffLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminServlet</servlet-name>
        <servlet-class>com.admin.controller.adminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.user.controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffLoginServlet</servlet-name>
        <url-pattern>/staff_login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/user_login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserSignUpServlet</servlet-name>
        <url-pattern>/user_signup.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddApplicationServlet</servlet-name>
        <url-pattern>/add_application.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminServlet</servlet-name>
        <url-pattern>/adminServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
